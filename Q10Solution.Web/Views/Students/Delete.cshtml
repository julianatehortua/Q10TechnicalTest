@model Q10Solution.Application.DTOs.StudentDto

@{
    ViewData["Title"] = "Eliminar Estudiante";
}

<h2>¿Está seguro de que desea eliminar el estudiante: @Model.Name?</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Documento</dt>
        <dd class="col-sm-10">@Model.Document</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
