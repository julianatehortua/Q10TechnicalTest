@model Q10Solution.Application.DTOs.SubjectDto

@{
    ViewData["Title"] = "Editar Materia";
}

<h2>Editar materia: @Model.Name</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Nombre</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Code" class="form-label">Código</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Credits" class="form-label">Créditos</label>
        <input asp-for="Credits" class="form-control" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
