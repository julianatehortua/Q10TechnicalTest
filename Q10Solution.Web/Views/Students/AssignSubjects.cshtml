@model Q10Solution.Application.DTOs.StudentDto
@{
    ViewData["Title"] = "Asignar Materias";
    var allSubjects = ViewBag.Subjects as List<Q10Solution.Application.DTOs.SubjectDto>;
}

<h2>Asignar materias al estudiante: @Model.Name</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })


<form asp-action="AssignSubjects" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Debe mantener presionada la tecla "Ctrl" para seleccionar varias materias</label>        
        <select asp-for="SubjectIds" asp-items="(List<SelectListItem>)ViewBag.Subjects" multiple class="form-control" size="10">
        </select>

    </div>


    <button type="submit" class="btn btn-success">Asignar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
