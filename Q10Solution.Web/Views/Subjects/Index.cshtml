@model List<Q10Solution.Application.DTOs.SubjectDto>

@{
    ViewData["Title"] = "Materias";
}

<h2>Materias</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary mb-2">Crear nueva materia</a>
</div>

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Código</th>
            <th>Créditos</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.Name</td>
                <td>@subject.Code</td>
                <td>@subject.Credits</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@subject.Id">Editar</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@subject.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
