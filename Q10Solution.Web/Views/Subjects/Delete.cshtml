@model Q10Solution.Application.DTOs.SubjectDto

@{
    ViewData["Title"] = "Eliminar Materia";
}

<h2>¿Está seguro de que desea eliminar la materia: @Model.Name?</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Código</dt>
        <dd class="col-sm-10">@Model.Code</dd>

        <dt class="col-sm-2">Créditos</dt>
        <dd class="col-sm-10">@Model.Credits</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
